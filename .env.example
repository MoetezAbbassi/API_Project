# ====================================
# Fitness API - Environment Variables
# For Azure App Service Deployment
# ====================================

# Flask Configuration
FLASK_ENV=production
FLASK_APP=run.py
FLASK_DEBUG=False

# Database (SQLite - No PostgreSQL needed!)
DATABASE_URL=sqlite:///fitness_app.db

# JWT Configuration (CHANGE THIS!)
JWT_SECRET_KEY=your-secret-key-minimum-32-characters-change-this
JWT_ACCESS_TOKEN_EXPIRE=86400

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# CORS (Update with your Azure URL after deployment)
CORS_ORIGINS=*

# Server Port (Azure uses 8000)
PORT=8000
